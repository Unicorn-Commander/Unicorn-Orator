#                      SPEECH-TO-TEXT (WHISPERX) SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Whisper model size (tiny, base, small, medium, large, large-v2, large-v3)
# Larger models are more accurate but slower and require more memory
WHISPER_MODEL=base

# Computing device for WhisperX (cpu, cuda)
# Use 'cuda' if you have an NVIDIA GPU
WHISPERX_DEVICE=cpu

# Computation type (int8, float16, float32)
# int8 is fastest on CPU, float16 for GPU
WHISPERX_COMPUTE_TYPE=int8

# Batch size for processing
# Higher values are faster but use more memory
WHISPERX_BATCH_SIZE=16

# Hugging Face token (optional, required for speaker diarization)
# Get your token from https://huggingface.co/settings/tokens
HF_TOKEN=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#                    TEXT-TO-SPEECH (KOKORO) SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Computing device for Kokoro (CPU, IGPU, CUDA)
# IGPU uses Intel integrated graphics via OpenVINO
KOKORO_DEVICE=CPU

# Default voice for Kokoro TTS
# Available voices: af, af_bella, af_nicole, af_sarah, af_sky, 
#                  am_adam, am_michael, bf_emma, bf_isabella, bm_george, bm_lewis
KOKORO_VOICE=af

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
